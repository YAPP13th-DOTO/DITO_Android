<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            app:titleEnabled="false"
            android:background="@color/yellow"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="0sp"
                    android:fontFamily="@font/nanumbarungothicotfbold"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/subjectName"
                    android:layout_marginBottom="6dp"
                    android:text="마케팅 팀플 2팀"/>
                <TextView
                    android:id="@+id/subjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:textColor="#111111"
                    android:lineSpacingExtra="8sp"
                    android:layout_above="@+id/layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="34dp"
                    android:fontFamily="@font/nanumbarungothicotflight"
                    android:text="마케팅 커뮤니케이션" />
                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="51dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/test_user"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/test_user"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/test_user"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/moreProfile_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icn_arrow_right"
                    android:layout_marginBottom="57dp"
                    android:layout_toRightOf="@+id/layout"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"/>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/title_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#111111"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nanumbarungothicotfbold"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="5sp" />
                <TextView
                    android:id="@+id/roomDone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/robotobold"
                    android:textStyle="bold"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="#111111"
                    android:lineSpacingExtra="5sp"
                    android:gravity="end"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:text="Done"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:visibility="visible">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#666666"
            android:letterSpacing="-0.03"
            android:fontFamily="@font/nanumbarungothic"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="8sp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="아직 과제가 없습니다.\n새로운 과제를 추가해보세요!" />
        <ImageView
            android:id="@+id/temp_iv"
            android:layout_width="99dp"
            android:layout_height="139dp"
            android:src="@drawable/img2"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/temp_tv"/>
    </RelativeLayout>


    <Button
        android:id="@+id/subjectAdd_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/yellow"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        android:fontFamily="@font/nanumbarungothicotfbold"
        android:lineSpacingExtra="0sp"
        android:layout_gravity="bottom"
        app:layout_behavior="com.example.kiyon.yappproject.common.QuickReturnFooterBehavior"
        android:text="과제추가"/>

</android.support.design.widget.CoordinatorLayout>