<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:orientation="horizontal"
        android:background="@drawable/box_list_finish"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#0f0f0f"
                android:lineSpacingExtra="4sp"
                android:fontFamily="@font/nanumbarungothicotfbold"
                android:gravity="center_horizontal"
                android:text="마케팅 팀플 2팀" />
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="11sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/nanumbarungothicotflight"
                android:text="마케팅 커뮤니케이션" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:gravity="right"
            android:layout_marginTop="22dp"
            android:paddingRight="22dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/roomMaster"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icn_leader"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/robotobold"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5sp"
                android:gravity="end"
                android:text="Done" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>