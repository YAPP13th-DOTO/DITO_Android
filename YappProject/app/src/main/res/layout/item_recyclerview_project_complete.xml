<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:id="@+id/relativeLayout"
        android:background="#ffffff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="#707070"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/test_user"
            android:layout_marginBottom="15dp"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/memberTaskSincerity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#0f0f0f"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:text="박나래님의 과제 성실도"/>

        <TextView
            android:id="@+id/percent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#0f0f0f"
            android:layout_marginRight="18dp"
            android:textStyle="bold"
            android:text="80%"/>

        <CheckBox
            android:id="@+id/moreTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:button="@drawable/icon_arrow_down"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_below="@id/relativeLayout"
        android:background="#f2f2f2"
        >

    </RelativeLayout>
</RelativeLayout>